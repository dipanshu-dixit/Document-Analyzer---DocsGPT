# DocsGPT Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ============================================
# AI Provider Configuration
# ============================================

# AI Provider: 'xai' or 'openai'
AI_PROVIDER=xai

# AI Model Name
# For xAI: grok-4-1-fast-reasoning, grok-beta, etc.
# For OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo, etc.
AI_MODEL=grok-4-1-fast-reasoning

# API Key (REQUIRED)
# Get your key from:
# - xAI: https://console.x.ai/
# - OpenAI: https://platform.openai.com/api-keys
API_KEY=your_api_key_here

# ============================================
# Backend Server Configuration
# ============================================

# Server Port
PORT=3001

# Node Environment: development, production, test
NODE_ENV=development

# ============================================
# File Upload Configuration
# ============================================

# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=.pdf,.docx,.txt

# ============================================
# CORS Configuration
# ============================================

# Allowed origins (comma-separated)
# For development: http://localhost:8000,http://127.0.0.1:8000
# For production: https://yourdomain.com
CORS_ORIGIN=http://localhost:8000

# ============================================
# Security Configuration
# ============================================

# Rate limiting (requests per minute)
RATE_LIMIT=60

# Enable request logging (true/false)
ENABLE_LOGGING=true

# ============================================
# Optional: Advanced Configuration
# ============================================

# AI Request Timeout (milliseconds)
AI_TIMEOUT=30000

# AI Temperature (0.0 - 1.0)
AI_TEMPERATURE=0.1

# AI Max Tokens
AI_MAX_TOKENS=800

# ============================================
# Development Only
# ============================================

# Debug mode (true/false)
DEBUG=false

# Verbose logging (true/false)
VERBOSE=false

# ============================================
# IMPORTANT SECURITY NOTES
# ============================================
# 1. Never commit your actual .env file
# 2. Keep API keys secret and rotate them regularly
# 3. Use different keys for development and production
# 4. Monitor your API usage and set billing alerts
# 5. Implement backend proxy for API calls in production
# 6. Use environment-specific .env files (.env.development, .env.production)
